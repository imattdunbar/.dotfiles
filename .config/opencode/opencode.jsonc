{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "default_agent": "plan",
  /*
    OpenAI Plan
    "model": "openai/gpt-5.2-codex",
    Claude Plan
    "model": "anthropic/claude-sonnet-4-5",
    CoPilot Plan
    "model": "github-copilot/claude-sonnet-4.5",
    Google Plan
    "model": "google/antigravity-claude-sonnet-4-5",
    Vertex
    "model": "google-vertex-anthropic/claude-opus-4-5@20251101",
  */
  "model": "openai/gpt-5.3-codex",
  "agent": {
    "plan": {
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": true
      },
      "permission": {
        "bash": "ask"
      }
    },
    "build": {
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "general": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5"
    },
    "explore": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "mcp": ["serena", "databasemcp"]
    },
    "database": {
      "mode": "subagent",
      "model": "github-copilot/claude-haiku-4.5",
      "mcp": ["serena", "databasemcp"]
    }
  },
  "permission": {
    "external_directory": {
      "~/.bun/**": "allow",
      "~/.config/opencode/opencode.jsonc": "allow",
      "**/*.env": "deny",
      "**/.env*": "deny"
    }
  },
  "plugin": [
    // "opencode-anthropic-auth", // https://github.com/anomalyco/opencode-anthropic-auth
    "opencode-antigravity-auth@latest" // https://github.com/NoeFabris/opencode-antigravity-auth
  ],
  "mcp": {
    "playwriter": {
      "enabled": true,
      "type": "local",
      "command": ["bunx", "-y", "playwriter@latest"] // https://github.com/remorses/playwriter
    },
    "serena": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--open-web-dashboard",
        "False"
      ]
    },
    "gitmcp": {
      "enabled": true,
      "type": "local",
      "command": ["bunx", "mcp-remote", "https://gitmcp.io/{owner}/{repo}"]
    },
    // "dunskills": {
    //   "enabled": true,
    //   "type": "local",
    //   "command": ["bun", "run", "/Users/matt/Desktop/dunskills/index.ts"]
    // },
    "tanstack": {
      "enabled": false,
      "type": "local",
      "command": ["bunx", "@tanstack/cli", "mcp"]
    },
    "exa": {
      "enabled": false,
      "type": "remote",
      "url": "{file:secrets/EXA_AI_URL}"
    },
    "ref": {
      "enabled": false,
      "type": "remote",
      "url": "{file:secrets/REF_TOOLS_URL}"
    }
    /*
      Database MCP Example
      https://googleapis.github.io/genai-toolbox/getting-started/introduction/
      Download as binary, place in ~/.config/opencode
      Different database connectors: https://googleapis.github.io/genai-toolbox/how-to/connect-ide/
      "databasemcp": {
        "type": "local",
        "command": ["/Users/matt/.config/opencode/toolbox", "--prebuilt", "postgres", "--stdio"],
        "enabled": true,
        "environment": {
          "POSTGRES_HOST": "localhost",
          "POSTGRES_PORT": "5432",
          "POSTGRES_DATABASE": "",
          "POSTGRES_USER": "",
          "POSTGRES_PASSWORD": ""
        }
      }
    */
  },
  "provider": {
    // Disabled opencode + openrouter models for now - plans are too good of a deal.
    // Provider + Model ID search: https://models.dev
    "opencode": {
      "whitelist": [
        // "claude-opus-4-5"
        "kimi-k2.5"
      ]
    },
    "openrouter": {
      "whitelist": [
        // "anthropic/claude-opus-4.5"
      ]
    },
    "anthropic": {
      "whitelist": [
        // Claude Pro plan - expired 1/23
        // "claude-sonnet-4-5"
      ]
    },
    "openai": {
      "whitelist": ["gpt-5.2-codex", "gpt-5.3-codex"]
    },
    "github-copilot": {
      "whitelist": [
        "claude-sonnet-4.5",
        "gemini-3-flash-preview",
        "gemini-3-pro-preview",
        "claude-haiku-4.5",
        "claude-opus-4.5"
      ]
    },
    // ----- Work ------
    // Run for auth
    // gcloud auth application-default login
    "google-vertex": {
      "whitelist": []
    },
    "google-vertex-anthropic": {
      "whitelist": ["claude-opus-4-5@20251101", "claude-opus-4-6@default"]
    },
    // -----------------
    "google": {
      "whitelist": [
        "antigravity-claude-sonnet-4-5",
        "antigravity-claude-opus-4-5-thinking",
        "antigravity-gemini-3-pro",
        "antigravity-gemini-3-flash"
      ],
      "models": {
        "antigravity-gemini-3-pro": {
          "name": "Gemini 3 Pro",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingLevel": "low" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-gemini-3-flash": {
          "name": "Gemini 3 Flash",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "minimal": { "thinkingLevel": "minimal" },
            "low": { "thinkingLevel": "low" },
            "medium": { "thinkingLevel": "medium" },
            "high": { "thinkingLevel": "high" }
          }
        },
        "antigravity-claude-sonnet-4-5": {
          "name": "Claude Sonnet 4.5",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "antigravity-claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "antigravity-claude-opus-4-5-thinking": {
          "name": "Claude Opus 4.5 Thinking",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
          "variants": {
            "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
            "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
          }
        },
        "gemini-2.5-flash": {
          "name": "Gemini 2.5 Flash",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-flash-preview": {
          "name": "Gemini 3 Flash Preview",
          "limit": { "context": 1048576, "output": 65536 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        },
        "gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview",
          "limit": { "context": 1048576, "output": 65535 },
          "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
        }
      }
    }
  }
}
