# Docs = https://ghostty.org/docs/config/reference
# Good example for reference = https://github.com/exosyphon/dotfiles/blob/main/ghostty.conf

# Font
font-family = "FiraCode Nerd Font Mono"
font-thicken = true
font-variation = wght=500
font-size = 14
font-feature = -liga
font-feature = -calt
font-feature = -dlig

# Colors
background-opacity = 0.85
background = #000000
foreground = #41FF00
background-blur-radius = 5

# Window
macos-titlebar-style = tabs
window-padding-x = 16
window-padding-y = 4
window-padding-color = extend
window-height = 48
window-width = 160
window-save-state = always

# General
cursor-color = #FFFFFF
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor
mouse-hide-while-typing = true
window-new-tab-position = end
window-inherit-working-directory = false
working-directory = home

# Ask before quitting
confirm-close-surface = false 


# -- Keybinds --
# Sends ctrl+b then e -- used in tmux, see tmux.conf
keybind = cmd+e=text:\x02e

# Sends ctrl+b then opt+shift+p -- saves tmux pane log
keybind = cmd+p=text:\x02\x1bP

# Sends ctrl+b then opt+p -- starts writing tmux pane log
keybind = cmd+l=text:\x02P

# Sends ctrl+b then z
keybind = ctrl+z=text:\x02z

keybind = cmd+shift+b=text:fsb\n
keybind = cmd+shift+d=text:gdb\n
keybind = ctrl+x=text:exit\n

# Quick Terminal
keybind = global:opt+q=toggle_quick_terminal
quick-terminal-animation-duration=0
quick-terminal-position=center

