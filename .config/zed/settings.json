  //   }
  // },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "neighbour"
  },
  "toolbar": {
    // "show": false
    "breadcrumbs": false,
    "quick_actions": false
  },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "project_panel": {
    "default_width": 320,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true
  },
  "chat_panel": {
    "button": false,
    "dock": "left"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "button": true,
    "dock": "left"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left"
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  }
}
