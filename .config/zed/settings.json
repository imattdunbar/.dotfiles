// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },
  "vim_mode": false,
  "format_on_save": "on",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "restore_on_startup": "none",
  "terminal": {
    "font_family": "FiraCode Nerd Font Mono",
    "blinking": "off"
  },
  "soft_wrap": "editor_width",
  "formatter": "auto",
  "prettier": {
    "allowed": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "semi": false,
    "printWidth": 120,
    "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"]
  },
  // AI + Code Completion
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "button": true,
    "dock": "left"
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "show_inline_completions": false,
  "show_completions_on_input": true,
  // ----- End of AI settings -----
  "languages": {
    "Go": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "format_on_save": {
        "external": {
          "command": "gofmt",
          "arguments": []
        }
      }
    }
    // This almost works
    // "Prisma": {
    //   "format_on_save": {
    //     "external": {
    //       "command": "bunx",
    //       "arguments": ["prisma", "format", "--schema", "{buffer_path}"]
    //     }
    //   }
    // }
  },
  // "language_servers": ["..."], // Default, eslint on
  // Disable the typescript-language-server because by default vtsls is enabled
  // and enabling both gives double pop overs on code hints
  "language_servers": ["!eslint", "!typescript-language-server", "..."], // eslint off
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "diagnostics": {
    "include_warnings": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "neighbour"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false // inline assist button is here
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "project_panel": {
    "default_width": 320,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true
  },
  "chat_panel": {
    "button": "never",
    "dock": "left"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "left"
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  }
}
